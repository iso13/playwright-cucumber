{
  "name": "cucumber-playwright",
  "version": "1.2.0",
  "description": "Starter project to write and debug cucumber-js features with Playwright",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "assertReport": "TBD",
    "precucumber": "rimraf reports traces && mkdir reports",
    "cucumber": "cross-env ENV=DEV cucumber-js --config cucumber.mjs",
    "cucumber:debug": "PWDEBUG=1 cross-env ENV=DEV cucumber-js --config cucumber.mjs",
    "report:open": "open reports/report.html",
    "test": "./run_tests.sh",
    "allure:dashboard": "allure serve ./reports/allure-results",
    "pw:show-trace": "npx playwright show-trace trace.zip",
    "prepare": "is-ci || husky install",
    "build": "npx tsc",
    "gherkin-lint": "npx gherkin-lint",
    "eslint": "npx eslint ."
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@assertthat/assertthat-bdd": "^1.9.1",
    "@cucumber/cucumber": "^8.5.2",
    "@cucumber/html-formatter": "20.0.0",
    "@cucumber/messages": "^19.1.2",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@playwright/test": "^1.28.0",
    "allure-commandline": "^2.18.1",
    "allure-playwright": "^2.0.0-beta.19",
    "cucumber-console-formatter": "1.0.0",
    "cucumber-html-reporter": "^5.5.0",
    "cucumber-pretty": "^6.0.1",
    "playwright": "^1.28.0",
    "typescript": "4.2.4",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.12",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.30",
    "@types/prettier": "^2.7.0",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "allure-cucumberjs": "2.0.0-beta.19",
    "as-a": "^2.2.2",
    "axe-html-reporter": "^2.2.3",
    "axe-playwright": "^1.1.11",
    "cross-env": "^7.0.3",
    "cucumber-junit": "^1.5.0",
    "cucumberjs-junitxml": "^1.0.0",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "^10.1.0",
    "gherkin-lint": "^4.2.2",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "open": "^8.4.0",
    "prettier": "2.7.1",
    "read-excel-file": "^5.4.7",
    "rimraf": "3.0.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.7.0",
    "tsc-files": "^1.1.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "npx prettier --write"
    ],
    "src/**/*.ts": [
      "npx eslint --fix",
      "npx eslint",
      "npx tsc-files --noEmit"
    ],
    "src/features/**/*.feature": [
      "npx gherkin-lint"
    ]
  }
}
